<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:stretchColumns="*"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ejercicio6"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/controles11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cámara 1: "/>
        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/controles12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/controles11"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luz 1: " />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/controles21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/controles12"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cámara 2: " />

        <ToggleButton
            android:id="@+id/toggle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textOff="No"
            android:textOn="Sí"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/controles22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/controles21">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luz 2: "

            />

    <ToggleButton
        android:id="@+id/toggle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Sí"
        android:textOff="No"

        android:checked="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/controles22">
        <ImageView
            android:id="@+id/camara1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="100px"
            android:maxWidth="100px"
            android:onClick="mostrar"/>
        <ImageView
            android:id="@+id/luz1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="100px"
            android:maxWidth="100px"
            android:onClick="mostrar"/>
        <ImageView
            android:id="@+id/camara2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="100px"
            android:maxWidth="100px"
            android:onClick="mostrar"/>
        <ImageView
            android:id="@+id/luz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="100px"
            android:maxWidth="100px"
            android:onClick="mostrar"/>

    </LinearLayout>

</RelativeLayout>
